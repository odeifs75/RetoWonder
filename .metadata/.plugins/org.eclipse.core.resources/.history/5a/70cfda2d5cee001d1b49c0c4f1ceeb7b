package vista;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import clases.Producto;
import modelo.ControladorDatos;

import java.awt.Color;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.JTable;
import javax.swing.JTextField;
import javax.swing.JSeparator;
import javax.swing.JScrollBar;
import javax.swing.JScrollPane;

import java.awt.ScrollPane;

public class Chat extends JDialog {

	private final JPanel contentPanel = new JPanel();
	private ScrollPane scrollPane;
	private JTable tablaChat;

	

	/**
	 * Create the dialog.
	 */
	public Chat() {
		setBounds(100, 100, 480, 487);
		getContentPane().setLayout(new BorderLayout());
		contentPanel.setBackground(new Color(238, 83, 130));
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		getContentPane().add(contentPanel, BorderLayout.CENTER);
		contentPanel.setLayout(null);
		
		JLabel lblNewLabel = new JLabel("CHAT");
		lblNewLabel.setFont(new Font("Tahoma", Font.BOLD, 17));
		lblNewLabel.setForeground(new Color(255, 255, 255));
		lblNewLabel.setBackground(new Color(238, 83, 130));
		lblNewLabel.setBounds(190, 11, 208, 38);
		contentPanel.add(lblNewLabel);
		
		JSeparator separator = new JSeparator();
		separator.setBounds(10, 56, 444, 10);
		contentPanel.add(separator);
		
		scrollPane = new ScrollPane();
		scrollPane.setBackground(Color.WHITE);
		scrollPane.setBounds(33, 89, 383, 213);
		contentPanel.add(scrollPane);
	}
	
	
	private void presentarTabla() {

		JScrollPane scroll = new JScrollPane();
		scroll.setBackground(new Color(238, 83, 130));
		tablaChat = this.cargarTabla();
		scroll.setViewportView(tablaChat);

		contentPanel.add(scroll);
		scroll.setBounds(55, 201, 414, 191);


	}


	private JTable cargarTabla() {
		return tablaChat;
		// TODO Auto-generated method stub
	}
}
